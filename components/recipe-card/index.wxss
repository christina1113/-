.recipe-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 8px;
  background-color: #fff;
}

.recipe-image {
  width: 100%;
  height: 200px;
  border-radius: 8px;
}

.recipe-info {
  margin-top: 10px;
  text-align: center;
}

.recipe-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.recipe-calories {
  font-size: 14px;
  color: #666;
}