/* components/health-goal/index.wxss */
.health-goal {
  width: 100%;
  padding: 20rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 10rpx 0;
}

.progress {
  height: 100%;
  background-color: #81C784;
  transition: width 0.5s ease;
  width: 0; /* 初始值 */
}

.goal-text {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666666;
  margin-top: 10rpx;
}