.create-post-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.header {
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background: white;
  border-bottom: 1rpx solid #f1f1f1;
}

.header .title {
  font-weight: bold;
}

.header .cancel-btn {
  color: #666;
}

.header .submit-btn {
  color: #ccc;
  font-size: 28rpx;
  padding: 10px 20px;
  border-radius: 8px;
  text-align: center;
}

.header .submit-btn.active {
  color: #4CAF50;
  font-weight: bold;
}

/* 编辑器容器 */
.editor-container {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
}

/* 图片上传区域 */
.image-uploader {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.image-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #f1f1f1;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.add-btn {
  width: 220rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #999;
}

.add-btn image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

/* 内容输入 */
.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 32rpx;
  line-height: 1.5;
  margin-bottom: 40rpx;
  padding: 10px;
  border: 1rpx solid #ccc;
  border-radius: 8px;
}

/* 标签区域 */
.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.tag {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
}

.tag.selected {
  background: #81C784;
  color: white;
}

/* 自定义标签输入 */
.custom-tag input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部提示 */
.footer-tip {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background: white;
}